{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "env": {
    "node": true,
    "es6": true,
    "commonjs": true
  },
  "root": true,
  "rules": {
    "linebreak-style": ["error", "unix"],
    "prefer-destructuring": [
      "error",
      {
        "array": false,
        "object": true
      }
    ]
  }
}
